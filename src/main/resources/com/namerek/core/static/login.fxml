<VBox alignment="CENTER" fillWidth="false" prefHeight="478.0" prefWidth="652.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.namerek.core.PresentationLayer.Controllers.HomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Text strokeLineCap="BUTT" strokeType="OUTSIDE" strokeWidth="0.0" text="Post office application" wrappingWidth="130.875" VBox.vgrow="SOMETIMES">
         <font>
            <Font name="Colonna MT" size="28.0" />
         </font>
      </Text>
      <GridPane prefHeight="169.0" prefWidth="255.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Login">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <TextField fx:id="employee_id" prefHeight="25.0" prefWidth="255.0" promptText="Login" GridPane.rowIndex="1" />
            <PasswordField fx:id="employee_password" alignment="BOTTOM_LEFT" cache="true" prefHeight="25.0" prefWidth="253.0" promptText="Password" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <Button fx:id="login" blendMode="MULTIPLY" contentDisplay="CENTER" mnemonicParsing="false" onAction="#login" prefHeight="25.0" prefWidth="207.0" text="Login" textOverrun="LEADING_ELLIPSIS">
         <effect>
            <DropShadow blurType="GAUSSIAN">
               <color>
                  <Color red="0.5657894611358643" green="0.07858186960220337" blue="0.07858186960220337" />
               </color>
            </DropShadow>
         </effect>
      </Button>
      <Text fx:id="log" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0">
         <font>
            <Font size="16.0" />
         </font>
      </Text>
   </children>
</VBox>
